@model List<Av3Shopping.ViewModels.LojaViewModel>

@{
    ViewData["Title"] = "Lista De Lojas";
}

@if(Model.Count == 0)
{
    <p>Nenhuma loja cadastrada</p>
}

else
{
    <h1>Lojas</h1>
    <p>@Model.Count Lojas Cadastradas</p>

    @foreach(var loja in Model)
    {
        <h2><a href="/Gerenciamento/DetalhesLoja/@loja.Numero">@loja.Nome</a></h2>

        <p>@loja.Categoria</p>
        <p><b>Numero: </b>@loja.Numero</p>
        <p>@loja.Descricao</p>
        <p>@loja.Email</p>
        <p><b>Piso: </b>>@loja.Piso</p>
    } 
        
}